// Definitions for SMX214 camera module on VC I2C bus
/dts-v1/;
/plugin/;

#include <dt-bindings/gpio/gpio.h>

/{
	compatible = "brcm,bcm2835";

	fragment@0 {
		target = <&i2c_csi_dsi>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";

			imx214: imx214@1a {
				compatible = "sony,imx214";
				reg = <0x1a>;
				status = "okay";

				enable-gpios = <&gpio 6 GPIO_ACTIVE_HIGH>;
				clocks = <&imx214_clk>;
				clock-names = "xclk";

				VANA-supply = <&cam1_reg>;	/* 2.8v */
				VDIG-supply = <&imx214_vdig>;	/* 1.8v */
				VDDL-supply = <&imx214_vddl>;	/* 1.2v */

				rotation = <180>;

				port {
					imx214_0: endpoint {
						remote-endpoint = <&csi1_ep>;
						data-lanes = <1 2 3 4>;
						link-frequencies =
							/bits/ 64 <480000000>;
					};
				};
			};
		};
	};

	fragment@1 {
		target = <&csi1>;
		__overlay__ {
			status = "okay";

			port {
				csi1_ep: endpoint {
					remote-endpoint = <&imx214_0>;
					data-lanes = <1 2 3 4>;
				};
			};
		};
	};

	fragment@2 {
		target = <&i2c0if>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@3 {
		target-path="/";
		__overlay__ {
			imx214_vdig: fixedregulator@1 {
				compatible = "regulator-fixed";
				regulator-name = "imx214_vdig";
				regulator-min-microvolt = <1800000>;
				regulator-max-microvolt = <1800000>;
			};
			imx214_vddl: fixedregulator@2 {
				compatible = "regulator-fixed";
				regulator-name = "imx214_vddl";
				regulator-min-microvolt = <1200000>;
				regulator-max-microvolt = <1200000>;
			};

			imx214_clk: camera-clk {
				compatible = "fixed-clock";
				#clock-cells = <0>;
				clock-frequency = <24000000>;
			};
		};
	};

	fragment@4 {
		target = <&i2c0mux>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@5 {
		target = <&cam1_reg>;
		__overlay__ {
			status = "okay";
			regulator-name = "imx214vana";
			regulator-min-microvolt = <2800000>;
			regulator-max-microvolt = <2800000>;
		};
	};

	__overrides__ {
		rotation = <&imx214>,"rotation:0";
	};
};
